md2b minimization restraint 20kcal 50ps 310K NPT
  &cntrl
  imin=0,
  irest=1, ntx=5,
  ntb=2,
  ntp=1, barostat=2, 
  taup=1.0, pres0=1.0,
  ntc=2, ntf=2,
  cut=10.0,
  ntr=1, restraint_wt=20.0, restraintmask=':1-12',
  ntt=3, gamma_ln=1.0,
  tempi=310.0, temp0=310.0,
  nstlim=25000, dt=0.002,
  ntpr=100, ntwx=1000, ntwr=1000,
 /

